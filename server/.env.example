# Copy this file to .env and fill in values.
# Never commit your real .env with secrets.

# Express server port
PORT=3000

# Required for Gemini integration
# Get one from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: environment name
NODE_ENV=development

# Optional: allowed origin for CORS (comma-separated if multiple)
# If unset, app allows all origins via cors() default config
CORS_ORIGIN=http://localhost:5173

# Database (PostgreSQL/Supabase required for REST API)
# Either provide DB_URL or discrete params below

# Option A: Connection URL (recommended for Supabase)
# Get from Supabase → Project Settings → Database → Connection string (URI)
# Example: postgresql://postgres:YOUR_PASSWORD@db.PROJECT_ID.supabase.co:5432/postgres
DB_URL=

# Option B: Discrete params
DB=postgres
DB_USER=postgres
DB_PASSWORD=your_password
DB_HOST=db.your-project.supabase.co
DB_PORT=5432
TIMEZONE=+00:00

# Dialect (postgres is now default)
DB_DIALECT=postgres

# Enable SSL for Supabase (default: true)
DB_SSL=true

# Legacy variable names still supported (fallbacks)
# Note: No longer applicable for PostgreSQL
# USER=postgres
# PW=your_password
# HOST=db.your-project.supabase.co
