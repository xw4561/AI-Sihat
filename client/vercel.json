{
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "https://app.example" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" },
        { "key": "Access-Control-Allow-Credentials", "value": "true" }
      ]
    }
  ]
  ,
  "rewrites": [
    { "source": "/api/:match*",      "destination": "https://ai-sihat-backend.vercel.app/api/:match*" },
    { "source": "/chat/:match*",     "destination": "https://ai-sihat-backend.vercel.app/chat/:match*" },
    { "source": "/ai-sihat/:match*", "destination": "https://ai-sihat-backend.vercel.app/ai-sihat/:match*" },
    { "source": "/(.*)",               "destination": "/index.html" }
  ]
}